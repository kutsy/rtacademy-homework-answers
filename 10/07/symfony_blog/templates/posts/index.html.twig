{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main class="main-posts">

    {% if top_post %}
        <article class="top-article">
            TOP ARTICLE <a href="#">{{ top_post.title }}</a>
        </article>
    {% endif %}

    <div class="posts">
        {% if posts|length > 0 %}
            {% for post in posts %}
                <article id="post-{{ post.id }}">
                    <a href="#" class="cover">
                        <img
                            src="/images/{{ post.cover.filename }}_310.jpg"
                            srcset="/images/{{ post.cover.filename }}_310.jpg 310w, /images/{{ post.cover.filename }}_350.jpg 350w, /images/{{ post.cover.filename }}_550.jpg 550w, /images/{{ post.cover.filename }}_640.jpg 640w"
                            sizes="(max-width: 48rem) 550px, (max-width: 62rem) 350px, (max-width: 75rem) 310px, 550px"
                            alt="{{ post.cover.alt|e }}"
                        />
                    </a>
                    <a href="#" class="title"><h2>{{ post.title }}</h2></a>
                    <time datetime="{{ post.publishDate|date('c') }}">{{ post.publishDate|date('d.m.Y H:i') }}</time>
                    <a href="#" class="description">{{ post.description }}</a>
                    <a href="#" class="more">Continue Reading</a>
                </article>
            {% endfor %}
        {% else %}
            <div class="no-articles">No articles</div>
        {% endif %}
    </div>

    {# TODO: пагінація/pagination #}
</main>
{% endblock %}
